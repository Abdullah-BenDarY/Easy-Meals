<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="primaryTxtView">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_25ssp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="fontFamily">@font/myfont</item>
    </style>

    <style name="mealName">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="fontFamily">@font/myfont</item>
    </style>

    <style name="headerTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="fontFamily">@font/myfont</item>
    </style>
    <style name="secondryTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="fontFamily">@font/myfont</item>
        <item name="android:paddingTop">@dimen/_15sdp</item>
    </style>


    <style name="cardView">
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="fontFamily">@font/myfont</item>
<!--        <item name="android:paddingBottom">@dimen/_10sdp</item>-->
    </style>

    <style name="instructions_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="fontFamily">@font/myfont</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="instructions_details">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/myfont</item>
        <item name="android:paddingStart">@dimen/_13sdp</item>
    </style>
